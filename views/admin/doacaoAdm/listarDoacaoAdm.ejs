
                <div class="container-fluid">
                    <h1>Doações cadastradas</h1>
<a class="btn btn-secondary" style="max-width: 200px;" href="/admin/doacaoAdm">Nova Doação</a>

<hr>
    <div>
        <table class="table table-striped">
            <thead>
                <th>Id doação</th>
                <th>Tipo doação</th>
                <th>Quantidade Doação</th>
                <th>Valor Doação</th>
                <th>Descrição da doação</th>
            </thead>
            <tbody>
                <% for (let i = 0; i < listaDoacao.length; i++)  { %>
                    <tr>
                        <td><%= listaDoacao[i].doacaoId %></td>
                        <td><%= listaDoacao[i].tipoDoacaoId %></td>
                        <td><%= listaDoacao[i].quantDoacao %></td>
                        <td><%= listaDoacao[i].valorDoacao %></td>
                        <td><%= listaDoacao[i].descDoacao %></td>
                        <td>
                            <a href="/admin/alterarDoacao/<%= listaDoacao[i].doacaoId %>" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                            <button onclick="excluirDoacao('<%= listaDoacao[i].doacaoId %>')" class="btn btn-danger btnExclusao"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    </div>         
    <script src="/js/admin/excluirDoacao.js"></script>
             