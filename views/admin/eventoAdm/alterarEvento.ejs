
                <div class="container">
                    <h1>Alterar Evento</h1>
                    <div>
                        <% if (typeof msg != "undefined") { %>             
                            <span><%= msg %></span>
                        <% } %>
                    </div>
                    <div>
                        <div>
                            <div>
                                <div class="form-group">
                                    <label for="nome" class="form-label">Nome do Evento:</label>
                                    <input type="text" maxlength="45" class="form-control" id="nome" name="nome" value="<%= evento.nomeEvento %>">
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <label for="data" class="form-label">Data do Evento</label>
                                    <input type="date" maxlength="10" class="form-control" id="data" name="data" value="<%= new Date(evento.dataEvento).toLocaleDateString()%>">
                                    
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <label for="local" class="form-label">Local do Evento</label>
                                    <input type="text"maxlength="45" class="form-control" id="local" name="local" value="<%= evento.localEvento %>">
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <label for="desc" class="form-label">Descrição do Evento:</label><br>
                                    <input type="text" id="desc" name="desc" maxlength="255" value="<%= evento.descEvento %>" class="form-control">
                                    
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <label for="eventoStatusId" class="form-label">Status do Evento:</label>
                                    <select class="form-control" id="eventoStatusId" name="eventoStatusId">
                                        <option value="0">Selecione...</option>
                                        <% for(let i = 0; i<lista.length; i++) { %>
                                            <% if(lista.statusEventoId == lista[i].statusEventoId) { %>
                                                <option selected value="<%= lista[i].statusEventoId %>"><%= lista[i].statusNome %></option>
                                            <% } else { %>
                                                <option value="<%= lista[i].statusEventoId %>"><%= lista[i].statusNome %></option>
                                            <% } %>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                            <div>
                                <button class="btn btn-primary" id="btnAlterarEvento" type="button">Alterar</button>
                                <a class="btn btn-danger" href="/evento">Voltar</a>
                            </div>
                        </div>
                    </div>
                </div>
    <script src="/js/admin/editarEvento.js"></script>
    <script>
        const btnCadastrarEvento = document.getElementById('btnAlterarEvento');
    
        btnCadastrarEvento.addEventListener('keydown', function() {
            const dataEventoInput = document.getElementById('data');
            const dataEventoValue = dataEventoInput.value;
            
            // Verifica se foi preenchido um valor de data
            if (!dataEventoValue) {
                alert('Por favor, preencha a data do evento.');
                return;
            }
    
            // Converte a data para um objeto Date
            const dataEvento = new Date(dataEventoValue);
            const dia = dataEvento.getDate();
            const mes = dataEvento.getMonth() + 1; // getMonth retorna 0 para janeiro, 1 para fevereiro, etc.
            const ano = dataEvento.getFullYear();
    
            // Validações específicas para dia, mês e ano
            if (dia < 1 || dia > 31 || mes < 1 || mes > 12 || ano < 2023 || ano > 2026) {
                alert('Data inválida. O dia deve estar entre 1 e 31, o mês entre 1 e 12, e o ano entre 2023 e 2026.');
                return;
            }
    
            // Se a data estiver válida, pode prosseguir com o envio dos dados para o backend
            console.log('Enviando dados para o backend...');
            // Aqui você pode adicionar lógica adicional para enviar os dados para o backend, por exemplo, usando fetch ou XMLHttpRequest
        });
    </script>
