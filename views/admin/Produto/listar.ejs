<script src="/js/Produto/listar.js"></script>
<script src="https://cdn.sheetjs.com/xlsx-0.20.2/package/dist/xlsx.full.min.js"></script>

<div class="container-fluid">
    <h1>Gerenciamento de Produtos/Donativos</h1>
    
    <div style="margin-bottom: 15px;display: flex;">
        <a href="/produto/cadastroProduto" class="btn btn-info" style="margin-right: 20px;"><i class="fas fa-plus"></i> Cadastrar</a>
        <button id="btnExportarExcel" class="btn btn-primary" >Exportar para Excel</button>
    </div>
    <div class="table-responsive"  style="margin-top: 15px;">
        <table class="table table-striped table-hover" id="tableProduto">
            <thead>
                <tr>
                    <th>Imagem</th>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Quantidade</th>
                    <th>Categoria</th>
                    <th>Marca</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% lista.map(function(value, index) { %>
                    <tr>
                        <td>
                            <% if(value.imagem != "") { %>
                                <img src="<%= value.imagem %>" width="80" />
                            <% }
                            else { %>
                                <img src="/img/sem-foto.png" width="80">
                            <% } %>
                            
                        </td>
                        <td><%= value.produtoCodigo %></td>
                        <td><%= value.produtoNome %></td>
                        <td><%= value.produtoQuantidade %></td>
                        <td><%= value.categoriaNome %></td>
                        <td><%= value.marcaNome %></td>                   
                        <td>
                            <div>
                                <a href="/produto/alterarProduto/<%= value.produtoId %>" class="btn btn-primary"> <i class="fas fa-pen"></i></a>
                                <button data-codigo="<%=value.produtoId %>" class="btn btn-danger btnExcluir"><i class="fas fa-trash"></i></button>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

